@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold">Latest Blog Posts</h1>
        <p class="text-muted">Catch up with our most recent stories and updates!</p>
    </div>
    
    <div class="row g-4">
        @foreach (var post in blogPosts)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Blog image">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted">@post.Date.ToString("MMMM dd, yyyy")</p>
                        <p class="card-text">@post.Content.Substring(0, Math.Min(100, post.Content.Length))...</p>
                        <a href="@($"/post/{post.Id}")" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

